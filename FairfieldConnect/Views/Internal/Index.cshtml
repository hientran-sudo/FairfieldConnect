@{
    ViewData["Title"] = "Home Page";
}

<div>
    <img src="~/images/home/ff.jpg" alt="" width=1280>
</div>
<div class="grid-container">

    <div class="grid-item">
        <h3>Housing</h3>

        <div class="container">
            <div class="image">
                <img src="~/images/home/apt.jpg" width=180 height=130>
            </div>
            <div class="text">
                <a asp-area="" asp-controller="Housing" asp-action="Listing">List a room</a>
                <br />
                <a asp-area="" asp-controller="Housing" asp-action="Find">Find a room</a>
                <br />
                <a asp-area="" asp-controller="Housing" asp-action="Review">Reviews</a>               
            </div>
        </div>
    </div>

    <div class="grid-item">
        <h3>Tutoring</h3>
        <div class="container">
            <div class="image">
                <img src="~/images/home/tutor.png" width=170 height=100>
            </div>
            <div class="text">
                <a asp-area="" asp-controller="Tutoring" asp-action="Index">Find a tutor</a>
                <br />
                             
            </div>
        </div>
    </div>

    <div class="grid-item">
        <h3>Community</h3>
        <div class="container">
            <div class="image">
                <img src="~/images/home/social.jpg" width=250 height=120>
            </div>
            <div class="text">
                <a asp-area=""asp-controller="Community" asp-action="Events">Events</a>
                <br />
                <a asp-area="" asp-controller="Community" asp-action="Clubs">Clubs</a>
            </div>
        </div>
    </div>

    <div class="grid-item">
        <h3>About Us</h3>
        <div class="container">
            <div class="image">
                <img src="~/images/home/stag.jpg" width=150 height=150>
            </div>
            <div class="text">
                <a asp-area="" asp-controller="Internal" asp-action="About">Our Story</a>
            </div>
        </div>
    </div>
</div>


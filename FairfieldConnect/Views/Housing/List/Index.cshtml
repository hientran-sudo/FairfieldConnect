@model List<HousingPost>
@{
    ViewBag.Title = "Housing Posts";
}
<div class="row">
    <div class="col-sm-10">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Address</th>
                    <th>Rate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hp in Model)
                {
                    <tr>
                        <td>@hp.HousingPostID</td>
                        <td>@hp.Title</td>
                        <td>@hp.Desc</td>
                        <td>@hp.Address</td>
                        <td>@hp.Rate</td>

                        <td>                           
                               @* <a asp-controller="Product" asp-action="Details" asp-route-id=@p.ProductID class="btn btn-info"> Details </a>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id=@p.ProductID class="btn btn-info"> Edit </a>*@
                                <a asp-controller="List" asp-action="Delete" asp-route-id="@hp.HousingPostID" class="btn btn-info"> Delete </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-action="Add">
            <button type="submit" class="btn btn-info"> Add Products </button>
        </form>
    </div>
</div>




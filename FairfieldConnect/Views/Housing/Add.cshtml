@model HousingPost

<h3>Add New Listing</h3>
<form asp-action="Add" method="post" style="width:800px">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Desc">Description:</label>
        <input type="text" asp-for="Desc" class="form-control" />
        @*<textarea type="text" asp-for="Desc" class="form-control" rows="5" cols="60" name="text" placeholder="Enter content"></textarea>*@
        <span asp-validation-for="Desc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rate">Rate:</label>
        <input type="text" asp-for="Rate" class="form-control" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-info" />
        <a asp-action="Index" class="btn btn-warning">Cancel</a>
    </div>
</form>





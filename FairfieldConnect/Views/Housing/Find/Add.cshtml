@*@model Review*@

<h3>Add New Post</h3>
<form asp-action="Add" method="post" style="width:800px">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label @*asp-for=""*@>Title:</label>
        <input type="text" @*asp-for=""*@ class="form-control" />
        <span @*asp-validation-for="" *@class="text-danger"></span>
    </div>

    <div class="form-group">
        <label @*asp-for=""*@>Description:</label>
        <textarea type="text" @*asp-for=""*@ class="form-control" rows="5" cols="60" name="text" placeholder="Enter content"></textarea>
        <span @*asp-validation-for="" *@class="text-danger"></span>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-info" />
        <a asp-action="Index" class="btn btn-warning">Cancel</a>
    </div>
</form>




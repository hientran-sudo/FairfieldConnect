@model IEnumerable<FairfieldConnect.Models.Thumbnail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ThumbnailName)*@
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbnailName)
            </td>

            <td>
                 <img src ="@("~/image/" + item.ThumbnailName)" asp-append-version="true" width="220px" height="250px"/>
            </td> 
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ThumbnailID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ThumbnailID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ThumbnailID">Delete</a>
                

            </td>
        </tr>
}
    </tbody>
</table>

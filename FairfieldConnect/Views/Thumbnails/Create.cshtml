@model Thumbnail

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Thumbnail</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ThumbnailName" class="control-label">Name</label>
                <input asp-for="ThumbnailName" class="form-control" />
                <span asp-validation-for="ThumbnailName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThumbnailFile" class="control-label"></label>
                <input asp-for="ThumbnailFile" accept="image/*"/>
                <span asp-validation-for="ThumbnailName" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

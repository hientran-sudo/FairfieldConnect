@model List<Club>
@{
    ViewBag.Title = "Clubs";
}
<h3>Clubs</h3>
<div class="row">
    <div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.ClubID</td>
                        <td>@r.Name</td>
                        <td>@r.Desc</td>
                        
                        <td>
                            <a asp-controller="Community" asp-action="ClubDetails" asp-route-id=@r.ClubID class="btn btn-info"> Details </a>
                            <a asp-controller="Community" asp-action="EditClub" asp-route-id=@r.ClubID class="btn btn-info"> Edit </a>
                            <a asp-controller="Community" asp-action="DeleteClub" asp-route-id="@r.ClubID" class="btn btn-info"> Delete </a>                              
                        </td>
                    </tr>
                }
            </tbody>
        </table>        
    </div>
</div>

<br/>
 <form asp-action="AddClub">
     <button type="submit" class="btn btn-info"> Start a Club </button>
 </form>
                


                       
                  
                    


   


